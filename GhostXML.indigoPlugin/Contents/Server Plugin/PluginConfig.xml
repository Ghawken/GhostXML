<?xml version="1.0"?>
<PluginConfig>
  <Field
    id="infoLabel0"
    type="label"
    fontColor="black">
    <Label>GhostXML Plugin                Developed by: Indigo Users</Label>
  </Field>

  <Field
    id="space0"
    type="label"
    fontColor="black">
    <Label></Label>
  </Field>

  <Field
    id="space1"
    type="label"
    fontColor="black">
    <Label>Polling Interval</Label>
  </Field>

  <Field
    id="space2"
    type="label"
    fontSize="small"
    fontColor="black">
    <Label>The amount of time that the plugin will wait between XML updates. This setting affects all plugin devices.</Label>
  </Field>

<!--
The poll interval is time in seconds minus 5 (there is a built in delay at
the beginning of the thread of 5 seconds to let the server catch up. Therefore,
we subtract the 5 seconds from the default value.
-->
  <Field
    id="configMenuPollInterval"
    type="menu"
    defaultValue="300"
    tooltip="Select preference for how often the XML data will be refreshed.">
    <Label>Polling Interval:</Label>
    <List>
      <Option value="10">15 Seconds</Option>
      <Option value="25">30 Seconds</Option>
      <Option value="55">1 Minute</Option>
      <Option value="115">2 Minutes</Option>
      <Option value="295">5 Minutes</Option>
      <Option value="895">15 Minutes</Option>
      <Option value="3595">1 Hour</Option>
      <Option value="14395">1 Hour</Option>
      <Option value="86395">1 Day</Option>
    </List>
  </Field>

  <Field
    id="space3"
    type="label"
    fontColor="black">
    <Label></Label>
  </Field>

  <Field
    id="space4"
    type="label"
    fontColor="black">
    <Label>Server Timeout:</Label>
  </Field>

  <Field
    id="space5"
    type="label"
    fontSize="small"
    fontColor="black">
    <Label>The amount of time that the plugin will wait for each XML source to respond.</Label>
  </Field>

  <Field
    id="configMenuServerTimeout"
    type="menu"
    defaultValue="15"
    tooltip="Select preference for how long the plugin waits for the server to respond.">
    <Label>Server Timeout:</Label>
    <List>
      <Option value="5">5 Seconds</Option>
      <Option value="10">10 Seconds</Option>
      <Option value="15">15 Seconds</Option>
      <Option value="20">20 Seconds</Option>
      <Option value="25">25 Seconds</Option>
      <Option value="30">30 Seconds</Option>
    </List>
  </Field>

  <Field
    id="space6"
    type="label">
    <Label></Label>
  </Field>

  <Field
    id="space7"
    type="label">
    <Label>Update Notification:</Label>
  </Field>

  <Field
    id="space8"
    type="label"
    fontSize="small">
    <Label>Receive an email alerting you to plugin updates.</Label>
  </Field>

  <Field
    id="updaterEmailsEnabled"
    type="checkbox"
    defaultValue="false"
    tooltip = "Enables (disables) email notifications.">
    <Label> </Label>
    <Description>Enable/Disable</Description>
  </Field>

  <Field
    id="updaterEmail"
    type="textfield"
    tooltip="Please enter the email address to receive notifications of updates to the plugin.">
    <Label>Email address:</Label>
  </Field>

  <Field
    id="space9"
    type="label">
    <Label></Label>
  </Field>

  <Field
    id="space10"
    type="label">
    <Label>Debugging:</Label>
  </Field>

  <Field
    id="space11"
    type="label"
    fontSize="small">
    <Label>Turn on debugging only when needed. Be careful when posting the output to the forums or other public places as it could expose sensitive information.</Label>
  </Field>

  <Field
    id="showDebugInfo"
    type="checkbox"
    tooltip="Enabling will result in verbose logging.">
    <Label> </Label>
    <Description>Enable/Disable</Description>
  </Field>

  <Field
    id="showDebugLevel"
    type="menu"
    defaultValue="Low"
    tooltip="Controls the amount of debug information written to the log.">
    <Label>Debug level:</Label>
    <Description>Enable/Disable</Description>
    <List>
      <Option value="1">Low</Option>
      <Option value="2">Medium</Option>
      <Option value="3">High</Option>
    </List>
  </Field>

</PluginConfig>
